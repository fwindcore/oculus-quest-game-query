湖底彻底搜查。", "developer_privacy_policy_url": "https://fasttravelgames.com/privacy-policy/", "developer_terms_of_service_url": null, "supported_player_modes": ["SITTING", "STANDING", "ROOM_SCALE"], "publisher_name": "Fast Travel Games", "supported_in_app_languages": [{"name": "中文（简体）"}, {"name": "俄语"}, {"name": "德语"}, {"name": "意大利语"}, {"name": "日语"}, {"name": "法语（法国）"}, {"name": "英语"}, {"name": "葡萄牙语（巴西）"}, {"name": "西班牙语（墨西哥）"}, {"name": "西班牙语（西班牙）"}, {"name": "韩语"}], "supported_hmd_platforms": ["MONTEREY"], "supported_input_device_names": ["Oculus Touch", "手势追踪"], "user_interaction_mode_names": ["单人"], "age_rating": null, "category_name": "游戏", "developer_name": "Fast Travel Games", "genre_names": ["冒险", "休闲", "益智"], "is_360_sensor_setup_required": false, "is_concept": false, "latest_supported_binary": {"__typename": "AndroidBinary", "version": "1.05", "change_log": "It's Christmas 2020!", "supported_hmd_types": ["MONTEREY"], "total_installed_space": "1083616375", "id": "3630678660323770", "required_space_adjusted": "781645594", "storeAddOns": null, "firstIapItems": null}, "recommended_graphics": null, "recommended_memory_gb": null, "recommended_processor": null, "release_date": 1573743600, "supported_tracking_modes": [], "website_url": "https://www.fasttravelgames.com/thecurioustaleofthestolenpets/", "current_offer": {"__typename": "AppStoreOffer", "offer_type": "APPSTORE_OFFER", "id": "3866954880003282", "__isPurchasableOfferWithApp": "AppStoreOffer", "price": {"currency": "USD", "offset_amount": "899", "formatted": "$8.99"}, "strikethrough_price": {"currency": "USD", "offset_amount": "1499", "formatted": "$14.99", "offset": 100}, "promo_benefit": "-40%", "end_time": 1609142340, "show_timer": false, "buy_button_captions": []}, "viewer_release_channel": {"id": "460404211182298"}, "live_release_channel": {"id": "460404211182298", "channel_name": "LIVE", "latest_supported_binary": {"__typename": "AndroidBinary", "id": "3630678660323770"}}, "release_channels": {"count"